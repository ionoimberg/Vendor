<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">uivendor_form.mageplaza_vendor_vendor_listing_data_source</item>
            <item name="deps" xsi:type="string">uivendor_form.mageplaza_vendor_vendor_listing_data_source</item>
        </item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">uivendor_form</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="string">Mageplaza\Vendor\Block\Adminhtml\Edit\Save</item>
            <item name="back" xsi:type="string">Mageplaza\Vendor\Block\Adminhtml\Edit\Back</item>
            <item name="reset" xsi:type="string">Mageplaza\Vendor\Block\Adminhtml\Edit\Reset</item>
            <item name="save_and_continue" xsi:type="string">Mageplaza\Vendor\Block\Adminhtml\Edit\SaveAndContinue</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Vendor</item>
    </argument>

    <settings>
        <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout>
    </settings>

    <dataSource name="mageplaza_vendor_vendor_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Mageplaza\Vendor\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">mageplaza_vendor_vendor_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">vendor_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="main_fieldset">
        <settings>
            <label translate="true">Vendor Details</label>
        </settings>
        <fieldset name="general_information">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="collapsible" xsi:type="boolean">true</item>
                    <item name="label" xsi:type="string" translate="true">Information</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
            <field name="name" sortOrder="10" formElement="input">
                <settings>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <dataType>text</dataType>
                    <visible>true</visible>
                    <label translate="true">Name</label>
                </settings>
            </field>
            <field name="status" sortOrder="0" component="Magento_Ui/js/form/element/single-checkbox-toggle-notice" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">0</item>
                        <item name="notices" xsi:type="array">
                            <item name="0" xsi:type="string" translate="true">Disabled</item>
                            <item name="1" xsi:type="string" translate="true">Enabled</item>
                        </item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Enable</label>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
            <field name="email" sortOrder="30" formElement="input">
                <settings>
                    <dataType>email</dataType>
                    <visible>true</visible>
                    <label translate="true">Email</label>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
            <field name="telephone" sortOrder="40" formElement="input">
                <settings>
                    <dataType>text</dataType>
                    <visible>true</visible>
                    <label translate="true">Telephone</label>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
    </fieldset>
    <fieldset name="settings_fieldset">
        <settings>
            <label translate="true">Vendor Settings</label>
        </settings>
        <fieldset name="general_settings">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="collapsible" xsi:type="boolean">true</item>
                    <item name="label" xsi:type="string" translate="true">Settings</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
            <field name="currency" sortOrder="0" formElement="select">
                <settings>
                    <dataType>text</dataType>
                    <visible>true</visible>
                    <label translate="true">Currency</label>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Magento\Config\Model\Config\Source\Locale\Currency" />
                            <caption translate="true">-- Please Select --</caption>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="notifications" sortOrder="10" component="Magento_Ui/js/form/element/single-checkbox-toggle-notice" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="number">0</item>
                        <item name="notices" xsi:type="array">
                            <item name="0" xsi:type="string" translate="true">Disabled</item>
                            <item name="1" xsi:type="string" translate="true">Enabled</item>
                        </item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Notify on New Orders</label>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
            <field name="specifications" sortOrder="30" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="notice" xsi:type="string" translate="true">Use comma to sepatare emails</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <visible>true</visible>
                    <label translate="true">Specify in CC Whom to Notify on New Orders</label>
                </settings>
            </field>
        </fieldset>
    </fieldset>
</form>
